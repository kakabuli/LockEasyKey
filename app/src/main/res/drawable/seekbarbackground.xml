<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="2pt" android:gravity="center_vertical">
        <shape>
            <gradient
                android:startColor="@color/color_bfbfbf"
                android:centerColor="@color/color_bfbfbf"
                android:centerY="0.75"
                android:endColor="@color/color_bfbfbf"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress"  android:height="2pt"  android:gravity="center_vertical">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/color_bfbfbf"
                    android:centerColor="@color/color_bfbfbf"
                    android:centerY="0.75"
                    android:endColor="@color/color_bfbfbf"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress"  android:height="2pt"  android:gravity="center_vertical">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/c0066A1"
                    android:centerColor="@color/c0066A1"
                    android:centerY="0.75"
                    android:endColor="@color/c0066A1"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>