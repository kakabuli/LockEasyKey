<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cF7F7F7"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="16pt"
            android:paddingEnd="16pt"
            app:srcCompat="@drawable/philips_icon_back_white"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/philips_user_detail"
            android:textColor="@color/white"
            android:textSize="17pt"/>

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/delete"
            android:gravity="center_vertical"
            android:textSize="16pt"
            android:paddingEnd="16pt"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="12pt"
        android:paddingStart="16pt"
        android:paddingEnd="16pt"
        android:maxLength="10"
        android:textColor="@color/color_333333"
        android:textSize="16pt"
        android:textCursorDrawable="@drawable/edittext_cursor"
        />


    <RelativeLayout
        android:id="@+id/rl_share_account"
        android:background="@color/white"
        android:layout_marginTop="8pt"
        app:layout_constraintTop_toBottomOf="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="56pt">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16pt"
            android:text="@string/philips_activity_shared__account"
            android:textColor="#333333"
            android:textSize="16pt"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16pt"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#189383 "
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="15pt" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/rl_share_account"
        android:layout_width="match_parent"
        android:layout_height="56pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16pt"
            android:text="@string/philips_setting_duress_alarm_app_add_time"
            android:textColor="#333333"
            android:textSize="16pt"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16pt"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#189383"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="15pt" />

    </RelativeLayout>


    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="@drawable/philips_button_setting_selector"
        android:text="@string/query"
        android:textColor="@color/white"
        android:textSize="16pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16pt"
        android:layout_marginStart="16pt"
        android:layout_marginBottom="53pt"/>


</androidx.constraintlayout.widget.ConstraintLayout>