<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16pt"
            app:srcCompat="@drawable/philips_icon_back" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting"
            android:textColor="@color/color_333333"
            android:textSize="17pt"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f7f7f7"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F2F2"
            android:layout_marginTop="12pt"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_device_name"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF"
                android:baselineAligned="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/device_name"
                    android:textColor="#333333"
                    android:textSize="16pt" />

                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    android:drawableRight="@drawable/philips_detail_setting_more"
                    android:drawablePadding="10pt"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:textColor="@color/color_666666"
                    android:textSize="15pt"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_wifi_name"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/activity_wifi_video_more_setting"
                    android:textColor="#333333"
                    android:textSize="16pt" />


                <TextView
                    android:id="@+id/wifi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    android:drawableRight="@drawable/philips_detail_setting_more"
                    android:drawablePadding="10pt"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="@string/wifi"
                    android:textColor="@color/color_666666"
                    android:textSize="15pt" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="43pt"
                android:textSize="14pt"
                android:text="@string/philips_video_setting_lock_mode"
                android:textColor="@color/color_666666"
                android:gravity="center_vertical"
                android:paddingLeft="16pt"
                android:background="@color/cF7F7F7"/>


            <RelativeLayout
                android:id="@+id/rl_safe_mode"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/philips_video_activity_open_lock_mode"
                    android:textColor="#333333"
                    android:textSize="16pt" />


                <TextView
                    android:id="@+id/iv_safe_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    android:drawableRight="@drawable/philips_detail_setting_more"
                    android:drawablePadding="10pt"
                    android:textColor="@color/color_666666"
                    android:textSize="15pt"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_am"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/philips_video_activity_lock_auto_mode"
                    android:textColor="#333333"
                    android:textSize="16pt" />

                <TextView
                    android:id="@+id/iv_am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    android:textSize="15pt"
                    android:textColor="@color/color_666666"
                    android:drawableRight="@drawable/philips_detail_setting_more"
                    android:drawablePadding="10pt" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_door_lock_language_switch"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/philips_video_activity_lock_language"
                    android:textColor="#333333"
                    android:textSize="16pt" />


                <TextView
                    android:id="@+id/tv_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    android:textSize="15pt"
                    android:textColor="@color/color_666666"
                    android:drawableRight="@drawable/philips_detail_setting_more"
                    android:drawablePadding="10pt" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_silent_mode"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/silent_mode"
                    android:textColor="#333333"
                    android:textSize="16pt" />

                <ImageView
                    android:id="@+id/iv_silent_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10pt"
                    android:src="@drawable/philips_setting_switch_selector" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="43pt"
                android:background="@color/cF7F7F7"
                android:gravity="center_vertical"
                android:paddingLeft="16pt"
                android:text="@string/philips_video_activity_lock_video"
                android:textColor="@color/color_666666"
                android:textSize="14pt" />

            <RelativeLayout
                android:id="@+id/rl_wandering_alarm"
                android:layout_width="match_parent"
                android:layout_height="88pt"
                android:background="#FFFFFF">


                <TextView
                    android:id="@+id/tv_wandering_alarm_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    android:drawableRight="@drawable/philips_detail_setting_more"
                    android:drawablePadding="10pt"
                    android:textColor="@color/color_666666"
                    android:textSize="15pt"
                    android:text="@string/wandering_alarm_close" />


                <TextView
                    android:id="@+id/tv_wandering_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16pt"
                    android:layout_marginTop="14pt"
                    android:text="@string/wandering_alarm"
                    android:textColor="#333333"
                    android:textSize="16pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_wandering_alarm"
                    android:layout_marginTop="8pt"
                    android:layout_marginLeft="16pt"
                    android:layout_marginRight="95pt"
                    android:text="@string/wandering_alarm_text"
                    android:textColor="#999999"
                    android:textSize="12pt" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_real_time_video"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/philips_video_activity_lock_real_time_video"
                    android:textColor="#333333"
                    android:textSize="16pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    app:srcCompat="@drawable/philips_detail_setting_more" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43pt"
                android:background="@color/cF7F7F7"
                android:gravity="center_vertical"
                android:paddingLeft="16pt"
                android:text="@string/security_setting"
                android:textColor="@color/color_666666"
                android:textSize="14pt" />

            <RelativeLayout
                android:id="@+id/rl_duress_alarm"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/philips_video_activity_duress_alarm"
                    android:textColor="#333333"
                    android:textSize="16pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    app:srcCompat="@drawable/philips_detail_setting_more" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43pt"
                android:background="@color/cF7F7F7"
                android:gravity="center_vertical"
                android:paddingLeft="16pt"
                android:text="@string/device_information"
                android:textColor="@color/color_666666"
                android:textSize="14pt" />

            <RelativeLayout
                android:id="@+id/rl_device_information"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/device_information"
                    android:textColor="#333333"
                    android:textSize="16pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    app:srcCompat="@drawable/philips_detail_setting_more" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_message_push"
                android:layout_width="match_parent"
                android:layout_height="56pt"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/message_push"
                    android:textColor="#333333"
                    android:textSize="16pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16pt"
                    app:srcCompat="@drawable/philips_detail_setting_more" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="44pt"
                android:layout_marginLeft="16pt"
                android:layout_marginTop="70pt"
                android:layout_marginRight="16pt"
                android:layout_marginBottom="37pt"
                android:background="@drawable/philips_retangle_cd202c_3"
                android:text="@string/philips_video_activity_delete_device"
                android:textColor="@color/white"
                android:textSize="16pt" />

        </LinearLayout>
    </ScrollView>


    <com.philips.easykey.lock.widget.avindicator.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="35pt"
        android:layout_height="35pt"
        android:layout_centerInParent="true"
        android:layout_marginTop="150pt"
        app:indicatorColor="#333333"/>
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/wifi_video_lock_waiting"
        android:layout_marginTop="10pt"
        android:textSize="14pt"
        android:layout_below="@id/avi"/>


</RelativeLayout>