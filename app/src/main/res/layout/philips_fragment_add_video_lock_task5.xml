<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/philips_plz_input_admin_pwd_to_confirm"
        android:layout_marginStart="16pt"
        android:layout_marginTop="29pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etAdminPwd"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginStart="16pt"
        android:layout_marginTop="24pt"
        android:layout_marginEnd="16pt"
        android:background="@drawable/philips_shape_search_et_bg"
        android:drawableStart="@drawable/philips_dms_icon_password"
        android:drawablePadding="15pt"
        android:paddingStart="12pt"
        android:paddingEnd="9pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTip" />

    <ImageView
        android:id="@+id/ivShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9pt"
        app:layout_constraintBottom_toBottomOf="@+id/etAdminPwd"
        app:layout_constraintEnd_toEndOf="@+id/etAdminPwd"
        app:layout_constraintTop_toTopOf="@+id/etAdminPwd"
        app:srcCompat="@drawable/philips_dms_icon_hidden" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/philips_lock_init_admin_pwd"
        android:layout_marginTop="8pt"
        android:textColor="@color/color_666666"
        android:textSize="14pt"
        app:layout_constraintStart_toStartOf="@+id/etAdminPwd"
        app:layout_constraintTop_toBottomOf="@+id/etAdminPwd" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="343pt"
        android:layout_height="44pt"
        android:text="@string/philips_next_step"
        android:textColor="@color/white"
        android:textSize="16pt"
        android:background="@drawable/philips_shape_btn_invalid_bg"
        android:layout_marginBottom="10pt"
        app:layout_constraintBottom_toTopOf="@+id/tvPwdFailed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPwdFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/philips_admin_pwd_wrong"
        android:textSize="14pt"
        android:layout_marginBottom="24pt"
        android:textColor="@color/cE98300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>