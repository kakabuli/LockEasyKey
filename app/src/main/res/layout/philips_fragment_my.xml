<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/head_second"
        android:layout_width="match_parent"
        android:layout_height="118pt"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16pt">

            <com.philips.easykey.lock.widget.CircleImageView
                android:id="@+id/iv_photo"
                android:layout_width="66pt"
                android:layout_height="66pt"
                android:layout_centerVertical="true"
                android:src="@mipmap/default_head"/>

            <TextView
                android:id="@+id/head_portrait_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_photo"
                android:layout_marginLeft="10pt"
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14pt"
                android:layout_centerVertical="true"
                android:src="@drawable/philips_icon_right_arrow" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        android:paddingTop="10pt"
        android:orientation="vertical">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/product_activition"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:drawableLeft="@mipmap/product_activation_icon"
                android:drawablePadding="@dimen/dp_13"
                android:text="@string/production_activation"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_16"
                android:src="@mipmap/grey_right_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_16"
                android:background="#EAE9E9"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/security_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16pt"
                android:drawableLeft="@drawable/philips_icon_securitysettings"
                android:drawablePadding="15pt"
                android:text="@string/security_setting"
                android:textColor="#333333"
                android:textSize="16pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14pt"
                android:src="@drawable/philips_icon_right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_feedback"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16pt"
                android:drawableLeft="@drawable/philips_icon_feedback"
                android:drawablePadding="15pt"
                android:text="@string/user_feedback"
                android:textColor="#333333"
                android:textSize="16pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14pt"
                android:src="@drawable/philips_icon_right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/faq_layout"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16pt"
                android:drawableLeft="@drawable/philips_icon_problem"
                android:drawablePadding="15pt"
                android:text="@string/chang_jian_question"
                android:textColor="#333333"
                android:textSize="16pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14pt"
                android:src="@drawable/philips_icon_right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/system_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16pt"
                android:drawableLeft="@drawable/philips_icon_setting"
                android:drawablePadding="15pt"
                android:text="@string/my_setting"
                android:textColor="#333333"
                android:textSize="16pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14pt"
                android:src="@drawable/philips_icon_right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_xk_layout"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16pt"
                android:drawableLeft="@drawable/philips_icon_abuot"
                android:drawablePadding="15pt"
                android:text="@string/about_us"
                android:textColor="#333333"
                android:textSize="16pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14pt"
                android:src="@drawable/philips_icon_right_arrow"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>