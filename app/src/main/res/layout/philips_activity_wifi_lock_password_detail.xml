<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.device.videolock.PhilipsWifiVideoLockNickNameActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="@color/c0066A1">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingStart="16pt"
            android:paddingEnd="16pt"
            app:srcCompat="@drawable/philips_icon_back_white" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/philips_video_activity_nickname"
            android:textColor="@color/white"
            android:textSize="17pt"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="12pt"
        android:paddingStart="16pt"
        android:paddingEnd="16pt"
        android:textSize="16pt"
        android:maxLength="10"
        android:textCursorDrawable="@drawable/edittext_cursor"
        />


    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="@drawable/philips_button_setting_selector"
        android:text="@string/query"
        android:textColor="@drawable/philips_textview_setting_selector"
        android:textSize="16pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16pt"
        android:layout_marginStart="16pt"
        android:layout_marginBottom="53pt"/>

</androidx.constraintlayout.widget.ConstraintLayout>