<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16pt"
        android:layout_marginStart="16pt"
        android:paddingTop="12pt"
        android:textStyle="bold"
        android:textColor="@color/color_333333"/>

    <TextView
        android:id="@+id/tv_password_num"
        android:layout_below="@+id/tv_password"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingStart="16pt"
        android:layout_marginTop="12pt"
        android:text=""
        android:gravity="center_vertical"
        android:textSize="16pt"
        android:textColor="@color/color_333333"
        android:layout_height="56pt"></TextView>

    <RelativeLayout
        android:id="@+id/rl_duress_alarm_toggle"
        android:layout_below="@+id/tv_password_num"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="56pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16pt"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:text="@string/stress_alarm"
            android:textSize="16pt"/>


        <TextView
            android:id="@+id/tv_duress_alarm_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16pt"
            android:drawableRight="@drawable/philips_detail_setting_more"
            android:drawablePadding="10pt"
            android:textColor="@color/color_666666"
            android:text="@string/open"
            android:textSize="15pt"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_duress_alarm_password_notification"
        android:layout_below="@+id/rl_duress_alarm_toggle"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="56pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16pt"
            android:textColor="@color/color_333333"
            android:textSize="15pt"
            android:layout_centerVertical="true"
            android:text="@string/philips_device_duress_alarm_notification"
            />

        <TextView
            android:id="@+id/tv_duress_alarm_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16pt"
            android:layout_centerVertical="true"
            android:textSize="16pt"
            android:textColor="@color/color_666666"
            />
    </RelativeLayout>

</RelativeLayout>