<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cF7F7F7">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="16pt"
            android:paddingEnd="16pt"
            app:srcCompat="@drawable/philips_icon_back_white"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/philips_add_user"
            android:textColor="@color/color_333333"
            android:textSize="17pt"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_nick_name"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="43pt"
        android:paddingStart="16pt"
        android:gravity="center_vertical"
        android:textColor="@color/c666666"
        android:textSize="14pt"
        />


    <EditText
        android:id="@+id/et_telephone"
        app:layout_constraintTop_toBottomOf="@+id/tv_nick_name"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:background="@color/white"
        android:hint="@string/philips_share_user_account"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingStart="16pt"
        android:textColor="@color/color_333333"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textColorHint="#999999"
        android:textSize="16pt" />

    <EditText
        android:id="@+id/et_nick_name"
        app:layout_constraintTop_toBottomOf="@+id/et_telephone"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:layout_marginTop="8pt"
        android:background="@color/white"
        android:hint="@string/philips_share_user_account_nickname"
        android:maxLines="1"
        android:maxLength="10"
        android:singleLine="true"
        android:paddingStart="16pt"
        android:textColor="@color/color_333333"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textColorHint="#999999"
        android:textSize="16pt" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="@drawable/philips_button_setting_selector"
        android:text="@string/add"
        android:textColor="@color/white"
        android:textSize="16pt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16pt"
        android:layout_marginStart="16pt"
        android:layout_marginBottom="53pt"/>



</androidx.constraintlayout.widget.ConstraintLayout>