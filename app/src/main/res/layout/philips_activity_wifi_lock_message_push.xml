<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cF7F7F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16pt"
            app:srcCompat="@drawable/philips_icon_back"  />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/message_push"
            android:textColor="@color/color_333333"
            android:textSize="17pt"  />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12pt"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:id="@+id/rl_message_free"
        android:layout_width="match_parent"
        android:layout_height="72pt"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/message_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginTop="14pt"
            android:text="@string/message_free"
            android:textColor="#333333"
            android:textSize="16pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_push"
            android:layout_marginLeft="16pt"
            android:textSize="12pt"
            android:layout_marginTop="8pt"
            android:textColor="#999999"
            android:text="@string/activiy_wifi_lock_message_push"/>

        <ImageView
            android:id="@+id/iv_message_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10pt"
            android:src="@drawable/philips_setting_switch_selector" />

    </RelativeLayout>

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/rl_message_free"
        android:id="@+id/rl_lock_info"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:background="#FFFFFF"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/message_push_lock_info"
            android:textColor="#333333"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/iv_lock_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17pt"
            android:src="@mipmap/iv_close" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_door_bell"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:background="#FFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/rl_lock_info"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/message_push_doorbell_info"
            android:textColor="#333333"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/iv_door_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17pt"
            android:src="@mipmap/iv_close" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_wandering_alarm"
        app:layout_constraintTop_toBottomOf="@+id/rl_door_bell"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:background="#FFFFFF"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/message_push_wnadering_alarm"
            android:textColor="#333333"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/iv_wandering_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17pt"
            android:src="@mipmap/iv_close" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>