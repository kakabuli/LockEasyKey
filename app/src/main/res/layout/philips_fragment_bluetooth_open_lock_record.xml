<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cF7F7F7"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginLeft="16pt"
        android:layout_marginTop="12pt"
        android:layout_marginRight="16pt"
        android:background="@drawable/retangle_fff_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/bluetooth_synchronized_door_lock_status"
            android:textColor="@color/color_333333"
            android:textSize="16pt" />

        <TextView
            android:id="@+id/tv_synchronized_record"
            android:layout_width="68pt"
            android:layout_height="20pt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16pt"
            android:background="@drawable/retangle_stroke_1f96f7_10"
            android:gravity="center"
            android:text="@string/synchronized_record"
            android:textColor="@color/c0066A1"
            android:textSize="14pt" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:layout_below="@id/rl_head"
        android:focusable="true">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <TextView
        android:id="@+id/tv_no_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textSize="14pt"
        android:textColor="@color/c666666"
        android:text="@string/no_more"/>
</RelativeLayout>