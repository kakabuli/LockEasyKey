<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <include layout="@layout/head"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:layout_marginTop="12pt"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16pt"
                android:text="@string/head_portrait"
                android:textColor="#333333"
                android:textSize="16pt" />

            <ImageView
                android:id="@+id/head_portrait_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16pt"
                android:src="@mipmap/right" />

            <com.philips.easykey.lock.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="34pt"
                android:layout_height="34pt"
                android:layout_centerVertical="true"
                android:layout_marginRight="41pt"
                android:layout_alignParentRight="true"
                android:src="@drawable/philips_mine_img_profile" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/head_nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="@string/nickname"
                android:textColor="#333333"
                android:textSize="16pt" />

            <ImageView
                android:id="@+id/head_name_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16pt"
                android:src="@mipmap/right" />

            <TextView
                android:id="@+id/head_portrait_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="42pt"
                android:layout_alignParentRight="true"
                android:textSize="16pt"
                android:textColor="#666666"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="end"
                android:text="@string/head_portrait_name" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/head_telNum_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="@string/personal_number"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />



            <TextView
                android:id="@+id/head_telNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_38"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_15"
                android:textColor="#8E8E93"
                android:text="" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_sign_out_login"
                android:layout_width="match_parent"
                android:layout_height="44pt"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16pt"
                android:layout_marginRight="16pt"
                android:layout_marginBottom="68pt"
                android:background="@drawable/philips_button_cd202c_3"
                android:text="@string/log_out"
                android:textColor="#FFFFFF"
                android:textSize="16pt" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>