<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0066a1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44pt">

        <ImageView
            android:id="@+id/ivList"
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:layout_marginLeft="16pt"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/philips_icon_list_default" />

        <ImageView
            android:id="@+id/ivGrid"
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:layout_marginLeft="16pt"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:srcCompat="@drawable/philips_icon_card_selected" />


        <TextView
            android:id="@+id/tvPhilips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/philips"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="17pt"/>

        <ImageView
            android:id="@+id/ivAddDevice"
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:layout_marginRight="16pt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/philips_icon_add" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDeviceTap"
        android:layout_width="match_parent"
        android:layout_height="54pt"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clVpAndRc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16pt"
        android:paddingTop="24pt"
        android:background="#f7f7f7">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpDevices"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_marginStart="16pt"
            android:layout_marginEnd="16pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevices"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_marginStart="16pt"
            android:layout_marginEnd="16pt"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llNoDevice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNoDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/philips_no_device"
            android:textSize="14pt"
            android:layout_marginTop="160pt"
            android:textColor="@color/color_333333"
            android:drawablePadding="16pt"
            android:layout_gravity="center"
            android:drawableTop="@drawable/philips_home_img_no_device"/>

        <Button
            android:id="@+id/btnAddDevice"
            android:layout_width="343pt"
            android:layout_height="44pt"
            android:layout_marginTop="138pt"
            android:background="@drawable/philips_shape_btn_bg"
            android:text="@string/click_add_device"
            android:textColor="@color/white"
            android:textSize="16pt" />

    </LinearLayout>

</LinearLayout>