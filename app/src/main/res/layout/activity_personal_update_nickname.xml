<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
   <include layout="@layout/head"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56pt"
            android:background="#FFFFFF"
            android:layout_marginTop="12pt">

            <EditText
                android:id="@+id/et_nickName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/delete"
                android:layout_marginLeft="16pt"
                android:background="@null"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="16pt"
                />
           <ImageView
               android:id="@+id/delete"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:padding="@dimen/dp_20"
               android:src="@mipmap/nickname_delete" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="44pt"
            android:layout_marginTop="269pt"
            android:layout_marginLeft="16pt"
            android:layout_marginRight="16pt"
            android:background="@drawable/philips_button_0066a1_3"
            android:text="@string/philips_confirm"
            android:textColor="#FFFFFF"
            android:textSize="16pt"/>

    </LinearLayout>


</LinearLayout>