<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

     <ImageView
         android:id="@+id/iv_pic"
         android:layout_width="122pt"
         android:layout_height="122pt"
         android:scaleType="centerCrop"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#ffffff"
         android:textSize="10pt"
         android:id="@+id/duration"
         android:layout_alignBottom="@id/iv_pic"
         android:layout_marginBottom="4pt"
         android:layout_alignRight="@id/iv_pic"
         android:layout_marginRight="9pt"
         />

     <ImageView
         android:id="@+id/iv_icon_background"
         android:layout_width="122pt"
         android:layout_height="122pt"
         android:background="#66000000"/>

     <ImageView
         android:id="@+id/iv_icon_paly"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:srcCompat="@drawable/philips_album_icon_play"
         android:layout_centerInParent="true"/>

     <ImageView
         android:id="@+id/iv_icon_delete"
         android:layout_alignRight="@id/iv_pic"
         android:layout_marginTop="5pt"
         android:layout_marginRight="6pt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/myablum_icon_delete_selector"/>

</RelativeLayout>
