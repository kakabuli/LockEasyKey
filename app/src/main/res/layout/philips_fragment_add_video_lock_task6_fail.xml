<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/philips_dms_img_fail" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17pt"
        android:text="@string/philips_add_failed"
        android:textSize="16pt"
        android:textColor="@color/color_333333"
        app:layout_constraintEnd_toEndOf="@+id/ivState"
        app:layout_constraintStart_toStartOf="@+id/ivState"
        app:layout_constraintTop_toBottomOf="@+id/ivState" />

    <TextView
        android:id="@+id/tvFailTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="16pt"
        android:layout_marginTop="44pt"
        android:layout_marginStart="16pt"
        android:text="1.请确保门锁WiFi连接未超过3分钟\n2.请确保WiFi是2.4G网络\n3.请确保WiFi账号、密码输入正确\n4.请确保门锁与路由器在10米内连接"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTip" />

    <Button
        android:id="@+id/btnRepair"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="16pt"
        android:layout_marginEnd="16pt"
        android:background="@drawable/philips_shape_btn_bg"
        android:text="@string/philips_wifi_lock_repair"
        android:textColor="@color/white"
        android:textSize="16pt"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCancelConnect"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:textSize="16pt"
        android:textColor="@color/white"
        android:background="@drawable/philips_shape_btn_cancel_bg"
        android:text="@string/philips_clothes_hanger_add_reconnect"
        android:layout_marginBottom="53pt"
        android:layout_marginStart="16pt"
        android:layout_marginEnd="16pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>