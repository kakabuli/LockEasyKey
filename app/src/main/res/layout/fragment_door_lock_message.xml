<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:background="#fff">

   <LinearLayout
       android:id="@+id/ll_device_type"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <TextView
          android:id="@+id/tv_lock_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="DDL708-1HW"/>

   </LinearLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:overScrollMode="never"
       android:fadingEdge="none"
       android:scrollbars="none">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/dp_80"
             android:layout_marginTop="8dp"
             android:layout_marginBottom="8dp"
             android:background="#f2f2f2"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="0.64">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20">

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true">

                  <TextView
                      android:id="@+id/tv_guard_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/guard_time"
                      android:textColor="#333333"
                      android:textSize="@dimen/sp_12" />

                  <RelativeLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tv_guard_time"
                      android:layout_centerHorizontal="true">

                     <TextView
                         android:id="@+id/create_time"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0"
                         android:singleLine="true"
                         android:ellipsize="end"
                         android:textColor="#1F96F7"
                         android:textSize="20sp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/day"
                         android:textColor="#999999"
                         android:layout_marginLeft="4dp"
                         android:layout_toRightOf="@+id/create_time"
                         android:layout_alignBottom="@+id/create_time"
                         android:layout_marginBottom="3dp"
                         android:textSize="@dimen/sp_12" />

                  </RelativeLayout>

               </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20">

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true">

                  <TextView
                      android:id="@+id/tv_guard_number"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/guard_number"
                      android:textColor="#333333"
                      android:textSize="@dimen/sp_12" />

                  <RelativeLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tv_guard_number"
                      android:layout_centerHorizontal="true">

                     <TextView
                         android:id="@+id/tv_open_lock_times"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="0"
                         android:singleLine="true"
                         android:ellipsize="end"
                         android:textColor="#1F96F7"
                         android:textSize="20sp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="4dp"
                         android:layout_toRightOf="@+id/tv_open_lock_times"
                         android:layout_alignBottom="@+id/tv_open_lock_times"
                         android:layout_marginBottom="3dp"
                         android:text="@string/ci"
                         android:textColor="#999999"
                         android:textSize="@dimen/sp_12" />
                  </RelativeLayout>
               </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_device_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_20"
                android:src="@mipmap/right" />
         </LinearLayout>

         <LinearLayout
             android:id="@+id/ll_video_lock_msg"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="10dp"
             android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/warning_message_inform"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_video_lock_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>
         </LinearLayout>

         <TextView
             android:id="@+id/tv_today_lock_statistics"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:text="@string/today_lock_statistics"/>

         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="10dp"
             android:background="@mipmap/bluetooth_no_connect_big_middle_icon">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

               <RelativeLayout
                   android:id="@+id/rl_open_lock_number"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true">

                  <TextView
                      android:id="@+id/tv_open_lock_number"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="26sp"
                      android:text="100"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/tv_open_lock_number"
                      android:layout_marginLeft="4dp"
                      android:layout_marginBottom="4dp"
                      android:layout_alignBottom="@+id/tv_open_lock_number"
                      android:textSize="16sp"
                      android:text="@string/ci"/>
               </RelativeLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/rl_open_lock_number"
                   android:text="@string/today_lock_message"/>
            </RelativeLayout>

         </RelativeLayout>

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/rcv_today_lock_statistics"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"/>

         <TextView
             android:id="@+id/tv_seven_day_data_statistics"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:text="@string/seven_day_data_statistics"/>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             android:layout_marginTop="20dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_seven_day_data_statistics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
         </RelativeLayout>
      </LinearLayout>

   </ScrollView>
</LinearLayout>