<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cF7F7F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16pt"
            app:srcCompat="@drawable/philips_icon_back_white"  />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/real_time_video"
            android:textColor="@color/color_333333"
            android:textSize="17pt"  />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12pt"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:id="@+id/rl_video_connect_open"
        android:layout_width="match_parent"
        android:layout_height="72pt"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/tv_real_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginTop="14pt"
            android:text="@string/real_time_video_setting_normal"
            android:textColor="#333333"
            android:textSize="16pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginRight="75pt"
            android:textSize="12pt"
            android:layout_below="@+id/tv_real_time_title"
            android:layout_marginTop="8pt"
            android:text="@string/real_time_video_setting_detail_normal"/>


        <ImageView
            android:id="@+id/iv_video_connect_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10pt"
            android:src="@drawable/philips_setting_switch_selector" />
    </RelativeLayout>

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/rl_video_connect_open"
        android:id="@+id/rl_video_connect_power"
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_real_time_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginTop="14pt"
            android:text="@string/real_time_video_setting_power"
            android:textColor="#333333"
            android:textSize="16pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginRight="75pt"
            android:textSize="12pt"
            android:layout_below="@+id/tv_real_time_title_1"
            android:layout_marginTop="8pt"
            android:text="@string/real_time_video_setting_detail_power"/>


        <ImageView
            android:id="@+id/iv_video_connect_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10pt"
            android:src="@drawable/philips_setting_switch_selector" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_video_connect_open"
        android:id="@+id/rl_real_time_period"
        android:layout_width="match_parent"
        android:layout_height="78pt"
        android:background="#FFFFFF"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_real_time_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:text="@string/real_time_video_setting_period"
            android:textColor="#333333"
            android:textSize="16pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginRight="16pt"
            android:textSize="12pt"
            android:layout_below="@+id/tv_real_time_title1"
            android:layout_marginTop="12pt"
            android:text="@string/real_time_video_setting_period_detail"/>

        <ImageView
            android:id="@+id/iv_real_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17pt"
            android:layout_centerVertical="true"
            android:src="@mipmap/right" />

        <TextView
            android:id="@+id/tv_period_connect"
            android:layout_toLeftOf="@id/iv_real_time_right"
            android:layout_toRightOf="@id/tv_real_time_title1"
            android:layout_marginLeft="40pt"
            android:layout_marginRight="16pt"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="15pt"
            android:text=""
            android:maxLines="1"
            />

    </RelativeLayout>


    <com.philips.easykey.lock.widget.avindicator.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="35pt"
        android:layout_height="35pt"
        app:indicatorColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="@string/wifi_video_lock_waiting"
        android:textSize="14pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avi"
        />

</androidx.constraintlayout.widget.ConstraintLayout>