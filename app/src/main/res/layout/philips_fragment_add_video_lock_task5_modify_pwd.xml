<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRestoreTip"
        android:layout_width="180pt"
        android:layout_height="180pt"
        android:layout_marginTop="41pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/philips_dms_img_alter" />

    <TextView
        android:id="@+id/tvRestoreTip"
        android:layout_width="353pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="55pt"
        android:text="@string/philips_lock_restore_tip"
        android:textColor="@color/color_333333"
        android:textSize="15pt"
        android:layout_marginStart="16pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivRestoreTip" />

    <ImageView
        android:id="@+id/ivSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124pt"
        android:layout_marginBottom="16pt"
        app:layout_constraintBottom_toTopOf="@+id/btnContinueToVerify"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/philips_dms_icon_default" />

    <TextView
        android:id="@+id/tvSelectTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5pt"
        android:text="已修改管理密码"
        android:textSize="14pt"
        android:textColor="@color/c666666"
        app:layout_constraintBottom_toBottomOf="@+id/ivSelect"
        app:layout_constraintStart_toEndOf="@+id/ivSelect"
        app:layout_constraintTop_toTopOf="@+id/ivSelect" />

    <Button
        android:id="@+id/btnContinueToVerify"
        android:layout_width="343pt"
        android:layout_height="44pt"
        android:background="@drawable/philips_shape_btn_invalid_bg"
        android:text="继续验证"
        android:textColor="@color/white"
        android:textSize="16pt"
        android:layout_marginBottom="53pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>