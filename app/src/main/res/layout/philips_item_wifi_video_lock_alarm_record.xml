<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12pt"
    >

    <TextView
        android:id="@+id/tv_day_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:text="@string/today"
        android:textColor="#333333"
        android:textSize="18pt"
        android:textStyle="bold"
        android:layout_marginStart="16pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:layout_below="@id/tv_day_time"
        android:text="16:40"
        android:textColor="@color/color_333333"
        android:layout_marginEnd="16pt"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_time"
        android:layout_marginTop="14pt"
        android:textSize="12pt"
        app:layout_constraintEnd_toEndOf="parent"  />


    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/philips_circle_0066a1_9"
        android:layout_marginStart="16pt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="19pt"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_time" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginLeft="20pt"
        app:layout_constraintStart_toEndOf="@id/iv"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_time"
        android:layout_marginTop="12pt"
        android:text="16:40"
        android:textColor="@color/color_333333"
        android:textSize="16pt" />

    <RelativeLayout
        android:id="@+id/rl_pic"
        android:layout_width="150pt"
        android:layout_height="225pt"
        android:layout_marginTop="12pt"
        android:layout_marginStart="45pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_right">

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="150pt"
            android:layout_height="225pt"
            android:scaleType="fitXY"

            />

        <ImageView
            android:id="@+id/iv_paly"
            android:layout_width="34pt"
            android:layout_height="34pt"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:srcCompat="@drawable/philips_album_icon_play" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>