<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:paddingHorizontal="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_add_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_person_faq_hanger_help_1"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wifi_video_lock_help_selector"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_27"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_1"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#333333"
                    android:text="@string/fragment_person_faq_hanger_help_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/background_clothes_hanger_f2f2f2"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:visibility="gone"
                    />

            </LinearLayout>


            <LinearLayout
                android:paddingHorizontal="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_add_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_person_faq_hanger_help_3"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wifi_video_lock_help_selector"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_27"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_2"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/background_clothes_hanger_f2f2f2"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:lineSpacingExtra="5dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:text="@string/fragment_person_faq_hanger_help_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />


            </LinearLayout>


            <LinearLayout
                android:paddingHorizontal="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_add_white"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rl_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_person_faq_hanger_help_5"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wifi_video_lock_help_selector"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_27"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_3"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/background_clothes_hanger_f2f2f2"
                    android:lineSpacingExtra="5dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:text="@string/fragment_person_faq_hanger_help_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
