<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cF7F7F7"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="16pt"
            android:paddingEnd="16pt"
            app:srcCompat="@drawable/philips_icon_back" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device_information"
            android:textColor="@color/color_333333"
            android:textSize="17pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_device_name"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:layout_marginTop="12pt"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/device_name"
            android:textColor="#333333"
            android:textSize="16pt" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16pt"
            android:textColor="@color/color_666666"
            android:gravity="end"
            android:textSize="15pt" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_device_model"
        app:layout_constraintTop_toBottomOf="@+id/rl_device_name"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/unit_type"
            android:textColor="#333333"
            android:textSize="16pt" />

        <TextView
            android:id="@+id/tv_device_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16pt"
            android:textColor="@color/color_666666"
            android:gravity="end"
            android:textSize="15pt" />

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:id="@+id/rl_device_sn"
        app:layout_constraintTop_toBottomOf="@+id/rl_device_model"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/serial_number"
            android:textColor="#333333"
            android:textSize="16pt" />

        <TextView
            android:id="@+id/tv_serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16pt"
            android:textColor="@color/color_666666"
            android:gravity="end"
            android:textSize="15pt" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_lock_model_firmware_version"
        app:layout_constraintTop_toBottomOf="@+id/rl_device_sn"
        android:layout_width="match_parent"
        android:layout_marginTop="12pt"
        android:background="@color/white"
        android:paddingRight="6pt"
        android:layout_height="56pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/lock_firware_version_number"
            android:textColor="#333333"
            android:layout_marginStart="16pt"
            android:textSize="16pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_wifilock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/philips_detail_setting_more" />

        <TextView
            android:id="@+id/tv_lock_firmware_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_wifilock"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="15pt"
            android:layout_marginEnd="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_wifilock"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_lock_check_firmware_version"
            android:layout_toLeftOf="@id/tv_lock_firmware_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10pt"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_lock_firmware_version"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/philips_circle_ed4a4a"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/rl_video_sn"
        android:layout_width="match_parent"
        android:layout_height="56pt"
        android:layout_marginTop="12pt"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/rl_lock_model_firmware_version"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/camera_serial_numer"
            android:textColor="#333333"
            android:textSize="16pt" />

        <TextView
            android:id="@+id/tv_video_serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16pt"
            android:gravity="end"
            android:textColor="@color/color_666666"
            android:textSize="15pt" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_tv_lock_firware_number"
        app:layout_constraintTop_toBottomOf="@+id/rl_video_sn"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingRight="6pt"
        android:layout_height="56pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16pt"
            android:text="@string/dialog_wifi_video_moudle_version"
            android:textColor="#333333"
            android:textSize="16pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_lock_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/philips_detail_setting_more"  />

        <TextView
            android:id="@+id/tv_lock_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_lock_firware_number"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="15pt"
            android:layout_marginEnd="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_lock_firware_number"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_lock_check_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_lock_firware_number"
            android:src="@drawable/philips_circle_ed4a4a"
            android:layout_marginEnd="10pt"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_lock_firware_number"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_lock_wifi_firware_number"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_tv_lock_firware_number"
        android:background="@color/white"
        android:paddingRight="6pt"
        android:layout_height="56pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16pt"
            android:text="@string/dialog_wifi_video_mcu_moudle_version"
            android:textColor="#333333"
            android:textSize="16pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_lock_wifi_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/philips_detail_setting_more"/>

        <TextView
            android:id="@+id/tv_lock_wifi_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_lock_wifi_firware_number"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/color_666666"
            android:textSize="15pt" />

        <ImageView
            android:id="@+id/img_lock_check_wifi_firware_number"
            android:layout_toLeftOf="@id/tv_lock_wifi_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/philips_circle_ed4a4a"
            android:layout_marginEnd="10pt"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_lock_wifi_firware_number"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_child_system_firware_number"
        app:layout_constraintTop_toBottomOf="@+id/rl_lock_wifi_firware_number"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingRight="6pt"
        android:layout_height="56pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16pt"
            android:text="@string/dialog_wifi_wifi_firmware_version"
            android:textColor="#333333"
            android:textSize="16pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_child_system_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/philips_detail_setting_more" />

        <TextView
            android:id="@+id/tv_child_system_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="15pt"
            android:layout_marginEnd="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_child_system_firware_number"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:id="@+id/img_child_check_system_firware_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10pt"
            app:layout_constraintEnd_toStartOf="@+id/tv_child_system_firware_number"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:src="@drawable/philips_circle_ed4a4a" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.philips.easykey.lock.widget.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="35pt"
        android:layout_height="35pt"
        app:indicatorColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="@string/wifi_video_lock_waiting"
        android:textSize="14pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avi"
        />

</androidx.constraintlayout.widget.ConstraintLayout>