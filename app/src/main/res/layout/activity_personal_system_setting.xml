<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/head"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_marginTop="12pt">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="66pt"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/philips_login_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="63pt"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="17pt"
                android:text="@string/Philips_easykey"/>

            <RelativeLayout
                android:id="@+id/rl_language_setting"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_75"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/language_setting"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:src="@mipmap/right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#F2F2F2"></View>
            </RelativeLayout>

            <TextView
                android:id="@+id/version_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16pt"
                android:layout_marginTop="53pt"
                android:textColor="#333333"
                android:textSize="14pt"
                android:text="@string/Philips_version_number"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24pt"
                android:layout_marginLeft="16pt"
                android:textColor="#0066A1"
                android:textSize="14pt"
                android:text="@string/Philips_website"/>


            <RelativeLayout
                android:id="@+id/primary_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24pt">

                <TextView
                    android:id="@+id/tv_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/primary_user_agreement"
                    android:textColor="#0066A1"
                    android:textSize="14pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_primary"
                    android:layout_marginLeft="5pt"
                    android:src="@drawable/philips_icon_more_10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_agreement_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24pt">

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16pt"
                    android:text="@string/user_agreement"
                    android:textColor="#0066A1"
                    android:textSize="14pt"  />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_agreement"
                    android:layout_marginLeft="5pt"
                    android:src="@drawable/philips_icon_more_10" />

            </RelativeLayout>


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/clear_cache_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_75"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/clear_cache"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:src="@mipmap/right" />

                <TextView
                    android:id="@+id/cache_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>